    "ws": "^8.16.0",
    "sqlite3": "^5.1.7",
    "systeminformation": "^5.21.22",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.cloudmedia.player",
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
